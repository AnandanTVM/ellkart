<link rel='stylesheet' href='/stylesheets/address.css' />
<section class="h-100 gradient-custom">
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="padding"></div>
            <div class="row container d-flex justify-content-center">
                <div class="col-md-6 col-lg-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25">

                                        <p style="margin-right: 75%;">Hello,</p>

                                        <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius"
                                            alt="User-Profile-Image" />
                                    </div>

                                    <h6 class="f-w-600">{{user.name}}</h6>
                                    <a href="/user/userCPProfile" style="color: blue;margin-left: 5%;">Change Password
                                        ?</a>
                                    <i class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                </div>
                            </div>

                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Change Password</h6>
                                    <form method="post" id="changePassword" action="/user/userChangePassword">
                                        <div class="row"> {{#if status}}
                                            <i><b>
                                                    <h1 style="color:red ;"> Invalid Password</h1>
                                                </b></i>

                                            {{/if}}
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">Enter Old Password</p>
                                                <input type="password" placeholder=" Old Password" name="oldPaaword"
                                                    class="form-control border-primary form-control-lg" />

                                            </div>
                                            <div class="col-sm-6">

                                            </div>

                                        </div>

                                        <div class="row mt-2"> <input value="{{user.phone}}" placeholder="New Password"
                                                name="phone" class="form-control border-primary form-control-lg"
                                                hidden />
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">New Password</p>

                                                <input type="password" id="password" placeholder="New Password"
                                                    name="password"
                                                    class="form-control border-primary form-control-lg" />

                                            </div>
                                            <div class="col-sm-6 ">
                                                <p class="m-b-10 f-w-600">Confirm Password</p>
                                                <input type="password" placeholder="Confirm Password"
                                                    name="passwordConfirm"
                                                    class="form-control border-primary form-control-lg" />
                                                <h6 class="text-muted f-w-400"></h6>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-6"></div>
                                            <div class="col-sm-4"><button type="submit"
                                                    class="btn btn-primary btn-lg btn-block">
                                                    Update
                                                </button></div>
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="padding"></div>
            <div class="padding"></div>
</section>