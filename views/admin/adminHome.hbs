<div class="col-8 mt-3">
    <h1><b><i>Admin Dashboard</i></b></h1>
    <div class="row clearfix mt-5">
        <div class="col-lg-3 col-md-6 col-sm-12 ">
            <div class="widget">
                <div class=" widget-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="state">
                            <h6>Users</h6>
                            <h2>{{allCount.usercount}}</h2>
                        </div>
                        <div class="icon">
                            <i class="fa-solid fa-users"></i>
                        </div>
                    </div>
                    <small class="text-small mt-10 d-block">6% higher than last month</small>
                </div>
                <div class="progress progress-sm">
                    <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="62" aria-valuemin="0"
                        aria-valuemax="100" style="width: {{allCount.usercount}}%;"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="widget">
                <div class="widget-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="state">
                            <h6>Products</h6>
                            <h2>{{allCount.productCount}}</h2>
                        </div>
                        <div class="icon">
                            <i class="fa-brands fa-product-hunt"></i>
                        </div>
                    </div>
                    <small class="text-small mt-10 d-block">61% higher than last month</small>
                </div>
                <div class="progress progress-sm">
                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="78" aria-valuemin="0"
                        aria-valuemax="100" style="width: {{allCount.productCount}}%;"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="widget">
                <div class="widget-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="state">
                            <h6>
                                Sales</h6>
                            <h2>{{allCount.totalSalse}}</h2>
                        </div>
                        <div class="icon">



                            <i class="fa-solid fa-indian-rupee-sign"></i>
                        </div>
                    </div>
                    <small class="text-small mt-10 d-block">Total Events</small>
                </div>
                <div class="progress progress-sm">
                    <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="31" aria-valuemin="0"
                        aria-valuemax="100" style="width: {{allCount.totalSalse}}%;"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="widget">
                <div class="widget-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="state">
                            <h6>oders</h6>
                            <h2>{{allCount.odderCount}}</h2>
                        </div>
                        <div class="icon">
                            <i class="fa-solid fa-box-taped"></i>


                        </div>
                    </div>
                    <small class="text-small mt-10 d-block">Total Odders</small>
                </div>
                <div class="progress progress-sm">
                    <div class="progress-bar bg-info" role="progressbar" aria-valuenow="20" aria-valuemin="0"
                        aria-valuemax="100" style="width: {{allCount.odderCount}}%;"></div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-lg-8 col-md-12">
                        <h3 class="card-title">Sales Report</h3>
                        <div class="charts-card">


                            <canvas id="bar"></canvas>
                        </div>


                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card" style="min-height: 422px;">
                <div class="card-header">

                    <div class="charts-card">
                        <h3>Top Products</h3>
                        <canvas id="donet">
                        </canvas>

                    </div>
                </div>
                <div class="card-body">
                    <div id="c3-donut-chart"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 ">
            <h3>Top Products Sales Of the Week </h3>
            {{#each productReport}}
            <div class="row mb-15">
                <div class="col-9">{{this.name}}</div>
                <div class="col-3 text-right">{{this.count}}%</div>
                <div class="col-12">
                    <div class="progress progress-sm mt-5">
                        <div class="progress-bar bg-randomColor" role="progressbar" style="width: {{this.count}}%"
                            aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>{{/each}}

        </div>
    </div>
</div>


</div>
