    {{/each}}
</ul>
<ul class="ulData" hidden>
    {{#each SalesReport}}
    <input class="Count_val" type="text" value="{{this.count}}">
    {{/each}}
</ul>
{{!-- salse report start end --}}
{{!-- product report start --}}
<ul class="ulLabel" hidden>
    {{#each productReport}}
    <input class="dou_Label_val" type="text" value="{{this.name}}">
    {{/each}}
</ul>
<ul class="ulData" hidden>
    {{#each productReport}}
    <input class="dou_Count_val" type="text" value="{{this.count}}">
    {{/each}}
</ul>


{{!-- product report start end --}}

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctr = document.getElementById('bar');
    let lableVal = document.getElementsByClassName("Label_val")
    let countVal = document.getElementsByClassName("Count_val")
    let label = []
    let data = []
    for (x in lableVal) {
        if (x <= lableVal.length) {
            label.push(lableVal[x].value)
            data.push(countVal[x].value)
        }

    }
    console.log(data)
    //give the data from data base
    // let label=[] 
    const bar = new Chart(ctr, {
        type: 'bar',
        data: {
            labels: label,
            datasets: [{
                label: 'Monthly Sales',
                data: data,
                backgroundColor: [
                    'rgba(255, 26, 104, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(0, 0, 0, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 26, 104, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(0, 0, 0, 1)'
                ],
                borderWidth: 1,
                hoverOffset: 4
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });



    //pi chart


    const ctx = document.getElementById('donet');
    let doulableVal = document.getElementsByClassName("dou_Label_val")
    let doucountVal = document.getElementsByClassName("dou_Count_val")
    let labels = []
    let datas = []
    let backgroundColor = []
    console.log(doulableVal)
    for (x in doulableVal) {
        if (x <= doulableVal.length) {
            labels.push(doulableVal[x].value)
            datas.push(doucountVal[x].value)
            const randomColor = Math.floor(Math.random() * 16777215).toString(16);
            backgroundColor.push("#" + randomColor)
        }

    }
    console.log(backgroundColor)
    console.log("debug")
    console.log(doulableVal.length)

    const donet = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: labels,
            datasets: [{
                label: 'Products',
                data: datas,
                backgroundColor: backgroundColor,
                hoverOffset: 4
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>